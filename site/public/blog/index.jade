!!! 5
html
  head
    title Blog | Patrick Stein
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no')
    meta(name='description', content='Patrick Stein is an entrepreneur specializing software development and user experience, hailing from Toronto Canada and living in sunny Portland Oregon.  He blogs, he brags, he bumbles, and he builds.  This is his personal site.')
    meta(name='og:title', content='Patrick Stein')
    meta(name='og:type', content='website')
    meta(name='og:image', content='/static/img/og.png')
    link(rel='stylesheet', href='/static/css/entry.css')
    link(rel='stylesheet', href='/static/lib/prettify/prettify.css')
  body
    header
      span Patrick Stein
      a(href="/") Home
      a.current(href="/blog/") Blog
      a(href="/projects") Projects

    section
      h1 Blog

    each article, slug in globals.public.blog.data
      // Skip the example article, since it's not meant for public consumption
      - // if (slug == 'example') continue;

      article
        a(href="/blog/" + slug)
          h2= article.title

