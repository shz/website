@import _common;

/******************************
/* Hero Business
/******************************/

#hero
  font-size 0
  display table
  width 100%
  height 100%
  /* 1564B2 389CFF 51A9FF */
  /* 1E5799 7DB9E8 */
  background-image radial-gradient(ellipse at top left, #1564B2 0%, #51A9FF 100%)

  > div
    display table-cell
    text-align center
    vertical-align middle
  h1, h2, h3
    margin 0
    line-height 1
  h2, h3
    text-shadow 2px 2px 2px rgba(0, 0, 0, 0.4)
  h1
    font-size 42pt
    color #FFF
  h2
    font-size 30px
    margin-bottom 4px
  h3
    font-size 18px
  .scroll
    font-size 140pt
    font-family "Novecento"
    font-weight bold
    text-shadow 2px 2px 2px rgba(0, 0, 0, 0.6)

@media screen and (max-width: 500px) {
  #hero h1 { font-size: 34px; }
  #hero h2 { font-size: 23px; }
  #hero h3 { font-size: 14px; }
}

/******************************
/* Main content
/******************************/

h1, h2, h3, h4, h5, h6
  text-shadow 2px 2px 2px rgba(0, 0, 0, 0.6)

main
  height 100%
  display table
  padding 100px 20px

  img
    width 200px
    margin-bottom 100px
    border-radius 4px

  p
    line-height 2
    font-size 14pt
  p a
    transition color 0.1s
    color black
    font-size 32pt
    font-family "Novecento"
    font-weight bold
    text-decoration none
    line-height 0
    position relative
    top 8px
    margin 0 2px

    &:hover
      color #1564B2

  > div
    display table-cell
    vertical-align middle
