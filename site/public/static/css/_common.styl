/******************************
/* Fonts and such
/******************************/

@font-face
  font-family "Novecento"
  src url("../fonts/novecento-bold.otf")
  font-weight bold

@font-face
  font-family "Crimson"
  src url("../fonts/crimson-normal.ttf")
  font-weight normal


/******************************
/* Basic Page Setup
/******************************/

html
  color white
  font-family "Crimson"
  width 100%
  height 100%


body
  margin 0
  width 100%
  height 100%

h1, h2, h3, h4, h5, h6
  text-transform uppercase
  font-family "Novecento", sans-serif
  text-shadow 2px 2px 2px rgba(0, 0, 0, 0.6)

/******************************
/* Hero Business
/******************************/

#hero {
  font-size: 0;
  display: table;
  width: 100%;
  height: 100%;
  /* 1564B2 389CFF 51A9FF */
  /* 1E5799 7DB9E8 */
  background-image: radial-gradient(ellipse at top left, #1564B2 0%, #51A9FF 100%);
}
#hero > div {
  display: table-cell;
  text-align: center;
  vertical-align: middle;
}
#hero h1, h2, h3 {
  margin: 0;
  line-height: 1;
}
#hero h2, h3 { text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.4); }
#hero h1 { font-size: 42pt; }
#hero h2 { font-size: 30px; margin-bottom: 4px; }
#hero h3 { font-size: 18px; }
#hero .scroll {
  font-size: 140pt;
  font-family: "Novecento";
  font-weight: bold;
  text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.6);
}

@media screen and (max-width: 500px) {
  #hero h1 { font-size: 34px; }
  #hero h2 { font-size: 23px; }
  #hero h3 { font-size: 14px; }
}

/******************************
/* Common Section Business
/******************************/

section {
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  font-size: 0;
  width: 100%;
  height: 100%;
  padding: 44px 20px;
  font-size: 14pt;
  color: #222;
  overflow: hidden;
  position: relative;
  display: table;
  text-align: center;
}

section > div {
  display: table-cell;
  vertical-align: middle;
}

section h1 {
  margin: 0;
  padding: 4px;
  font-size: 32pt;
  line-height: 0.8;
  color: #222;
  text-shadow: none;
}

section h1 a {
  color: #222;
  text-decoration: none;
}

section h1 small {
  font-family: "Crimson";
  font-weight: normal;
  font-size: 14pt;
  text-transform: none;
}

section p {
  max-width: 30em;
  margin: auto;
  line-height: 2;
  text-align: left;
}

section p a {
  transition: color 0.1s;
  color: black;
  font-size: 32pt;
  font-family: "Novecento";
  font-weight: bold;
  text-decoration: none;
  line-height: 0;
  position: relative;
  top: 8px;
  margin: 0 2px;
}
section p a:hover {
  color: #1564B2;
}
